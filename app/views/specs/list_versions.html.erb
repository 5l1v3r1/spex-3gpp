<div class="block data-block">
    <h4><%= @spec.name %>: <i><%= @spec.title %></i></h4>
    <h5><%= link_to "Info Page @ 3GPP", @spec.info_page_url %></h5>
    <table class="data-table">
        <% last_rel = 0 %>
        <% for vers in @spec.document_versions %>
            <% if last_rel < vers.editorial %>
                <% last_rel = vers.editorial %>
                <tr><td colspan="2" class="release"><%= vers.release.name %></td></tr>
            <% end %>
            <tr><td><%= link_to vers.version, specs_res_url( {
                :serie => @spec.spec_serie.index,
                :spec => @spec.name.gsub('.','_'),
                :version => vers.version.gsub('.','_') } ) %></td></tr>
        <% end %>
    </table>
</div>